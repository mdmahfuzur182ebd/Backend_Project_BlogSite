<!DOCTYPE html>
<html lang="en">
  <%- include('../../partials/head'); %>
  <body>
    <%- include('../../partials/navigation'); %>
    <div class="container"><%- include('../../partials/alert') %></div>

    <div class="container-fluid">
      <div class="row">
        <div class="col-md-2"></div>

        <div class="col-md-10">
          <div class="row">
            <div class="col-md-8 offset-md-2">
              <div class="card card-body my-5">
                <h3><%= title %></h3>
                <div class="profile-pics">
                  <img
                    class="img-fluid img-thumbnail col-md-2"
                    src="<%= user.profilePics %>"
                    alt="Profile Pics"
                    id="profilePics"
                  />
                  <form
                    action="/uploads/profilePics"
                    class="my-2"
                    id="profilePicsForm"
                  >
                    <input
                      type="file"
                      name="profilePics"
                      id="profilePicsFile"
                      accept="image/*"
                    />
                    <input
                      type="button"
                      value="Remove Pies"
                      id="removeProfilePics"
                      style="display:<%= user.profilePics.includes('default.png') ? 'none' : 'block' %>"
                      class="btn btn-danger btn-sm my-2"
                    />
                  </form>
                </div>
                <div>
                  <form action="/dashboard/create-profile" method="POST">
                    <div class="form-group">
                      <label for="name">Enter Your Name</label>
                      <input
                        type="text"
                        class="form-control"
                        name="name"
                        placeholder="Enter Your Name"
                        id="name"
                      />
                    </div>
                    <div class="form-group">
                      <label for="name">Enter Your Email</label>
                      <input
                        type="email"
                        class="form-control"
                        name="email"
                        placeholder="Enter Your Email"
                        value="<%= user.email %>"
                        id="name"
                        disabled
                      />
                    </div>
                    <div class="form-group">
                      <label for="name">Enter A Short Title </label>
                      <input
                        type="text"
                        class="form-control"
                        name="title"
                        placeholder="Enter A Short Title"
                        id="title"
                      />
                    </div>
                    <div class="form-group">
                      <label for="name">Enter A Short Bio</label>
                      <textarea name="bio" id="bio" class="form-control">
                      </textarea>
                    </div>

                    <div>
                      <p class="lead">Your Social Links</p>
                      <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="fab fa-internet-explorer"></i>
                          </span>
                        </div>
                        <input
                          type="text"
                          class="form-control"
                          name="website"
                          placeholder="Website Link"
                        />
                      </div>

                      <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="fa-brands fa-facebook"></i>
                          </span>
                        </div>
                        <input
                          type="text"
                          class="form-control"
                          name="facebook"
                          placeholder="Facebook Link"
                        />
                      </div>

                      <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="fa-brands fa-whatsapp"></i>
                          </span>
                        </div>
                        <input
                          type="text"
                          class="form-control"
                          name="twitter"
                          placeholder="Twitter Link"
                        />
                      </div>
                      <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="fa-brands fa-github-square"></i>
                          </span>
                        </div>
                        <input
                          type="text"
                          class="form-control"
                          name="github"
                          id=""
                          placeholder="Github Link"
                        />
                      </div>
                      <button type="button" class="btn btn-primary">
                        Create Profile
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('../../partials/footer'); %>
  </body>
</html>
